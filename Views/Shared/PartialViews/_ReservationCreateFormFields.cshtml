@model Reservation

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group mb-3">
    <label asp-for="ReservationDate" class="control-label"></label>
    <input asp-for="ReservationDate" class="form-control" />
    <span asp-validation-for="ReservationDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Venue!.Name" class="control-label"></label>
    <select asp-for="VenueId" class="form-control" asp-items="ViewBag.Venues"></select>
</div>
<div hidden class="form-group">
    <label asp-for="EventId" class="control-label"></label>
    <input asp-for="EventId" class="form-control" />
</div>

