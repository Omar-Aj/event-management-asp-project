@model IEnumerable<Event>

@{
    ViewData["Title"] = "MyEvents";
}

<main class="main">
    <!-- Page Title -->
    <div class="page-title" data-aos="fade" style="background-image: url(assets/img/page-title-bg.webp);">
        <div class="container position-relative">
            <h1>My Events</h1>
            <p></p>
            <nav class="breadcrumbs">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="current">My Events</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- End Page Title -->
</main>

<h1>MyEvents</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="@(Model.FirstOrDefault()!.Title)"></label>
            </th>
            <th>
                <label asp-for="@(Model.FirstOrDefault()!.DurationInHours)"></label>
            </th>
            <th>
                <label asp-for="@(Model.FirstOrDefault()!.Description)"></label>
            </th>
            <th>
                <label asp-for="@(Model.FirstOrDefault()!.Reservations!.FirstOrDefault()!.Venue!.Name)"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.DurationInHours
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @if (item.Reservations is null || item.Reservations.Count() == 0)
                    {
                        <span class="text-danger">No Reservations</span>
                    }
                    else
                        @foreach (var reservation in item.Reservations)
                        {
                            @reservation.Venue!.Name <span>-</span> @reservation.ReservationDate
                        }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

